{
  "manifest_version": 3,
  "name": "ReceiptWise Clipper",
  "version": "1.0.1",
  "description": "Quickly capture and upload receipts to ReceiptWise using a snipping tool",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Capture Receipt",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://www.receiptwise.io/*",
    "https://receiptwise.io/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "commands": {
    "capture-receipt": {
      "suggested_key": {
        "default": "Alt+Shift+R",
        "mac": "MacCtrl+Shift+R"
      },
      "description": "Capture receipt from screen"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["content/content.css", "cropper/cropper.html", "cropper/cropper.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
